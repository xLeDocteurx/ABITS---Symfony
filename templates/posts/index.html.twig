{% extends 'base.html.twig' %}

{% block title %}Posts index{% endblock %}

{% block body %}
    <h1>Welcome to ABITS !</h1>
    <h4>Here is some news about your App !</h4>

    {# <a href="{{ path('posts_new') }}">Create new</a> #}

    <ul class="pagination">
        <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
        <li class="active"><a href="#!">1</a></li>
        <li class="waves-effect"><a href="#!">2</a></li>
        <li class="waves-effect"><a href="#!">3</a></li>
        <li class="waves-effect"><a href="#!">4</a></li>
        <li class="waves-effect"><a href="#!">5</a></li>
        <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
    </ul>

    {% for post in posts %}
        <div class="row">
            <div class="col s12 m6">
            <div class="card">
                <div class="card-image">
                    <a href="{{ path('posts_show', {'id': post.id}) }}"><img src="{{ asset('images/sample-1.jpg') }}" alt="Card Image">
                    <span class="card-title">#{{ post.id }} : {{ post.title }}</span></a>
                    <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
                </div>
                <div class="card-content">
                    {{ post.date ? post.date|date('Y-m-d H:i:s') : '' }} / By : <a href="{{ path('users_show', {'id': post.author.id}) }}">{{ post.author.username }}</a>
                    <p>{{ post.content }}</p>
                </div>
                <div class="card-action">
                    <a href="{{ path('posts_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('posts_edit', {'id': post.id}) }}">edit</a>
                </div>
            </div>
            </div>
        </div>

    {% else %}
        <tr>
            <td colspan="5">no records found</td>
        </tr>
    {% endfor %}

{% endblock %}
