{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <h1>Posts</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ post.author.username }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ post.date ? post.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Comments</th>
                <td>
                {% for com in post.comments %}

                    {{ com.author.username }} // {{ com.content }} <br> {{ com.date ? com.date|date('Y-m-d H:i:s') : '' }}
                    
                {% else %}
                    No commentarie found
                {% endfor %}
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ path('comments_new', {'id': post.id}) }}">Comment this post</a>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('posts_index') }}">back to list</a>

    <a href="{{ path('posts_edit', {'id': post.id}) }}">edit</a>

    {{ include('posts/_delete_form.html.twig') }}
{% endblock %}
