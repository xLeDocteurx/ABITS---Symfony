{% extends 'base.html.twig' %}

{% block title %}BottlesSent{% endblock %}

{% block body %}
    <h1>BottlesSent</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bottles_sent.id }}</td>
            </tr>
            <tr>
                <th>Bottle</th>
                <td>#{{ bottles_sent.bottle.id }} : {{ bottles_sent.bottle.title }}</td>
            </tr>
            <tr>
                {% for receiver in bottles_sent.receivers %}
                    <th>Receiver #{{ receiver.id }} : </th>
                    <td>{{ receiver.username }}</td>
                {% else %}
                    <th>Receivers</th>
                    <td>
                    {# No receivers WHAT THE HACK CALL 911 #}
                    No receivers yet
                    </td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('bottles_sent_index') }}">back to list</a>

    <a href="{{ path('bottles_sent_edit', {'id': bottles_sent.id}) }}">edit</a>

    {{ include('bottles_sent/_delete_form.html.twig') }}
{% endblock %}
